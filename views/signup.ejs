<% include partials/head %>

  <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Plant Management System</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="/users/new">Create New Plants</a></li>
            <li><a href="/users/all">Display All Plants</a></li>
            <li><a href="/users/getArchived">Archived Plants</a></li>
            <li><a href="/users/showSnapshot">Snapshot</a></li>
            <li><a href="/users/signup">Signup</a></li>
          </ul>
        </div>
    </nav>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="jumbotron text-center">
        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <% if (message) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>

        <form action="/signup" method="post">
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email" required>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required/>
          </div>
          <div>
            <input type="submit" class="form-control" value="Submit" />
          </div>
        </form>
      </div>
      <hr>
      <span class="fa fa-sign-in"> Already have an account?<a href="/login"> Login</a></span>
      <p>Or go <a href="/">home</a>.</p>
    </div>
  </body>
</html>
